{% extends "base.j2" %}
{% block content %}
    <div class="page-header">
        <h1>Edit Alert</h1>
    </div>
    <div class="form-size">
        <form method="post">
            <form>
              <div class="form-group">
                <label for="name">Alert/Item Title</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" disabled value="{{ alert.name }}">
              </div>
              <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="URL http(s)://...." value="{{ alert.url }}" disabled>
              </div>
              <div class="form-group">
                <label for="price_limit">Price Limit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="$20.0" value="{{ alert.price_limit }}" aria-describedby="priceLimitHelp">
                <small id="priceLimitHelp" class="form-text text-muted">We'll send you an emmail when the price reaches or goes under the Price Limit.</small>
              </div>
              <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </form>
    </div>
{% endblock %}